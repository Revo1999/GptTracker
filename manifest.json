{
  "manifest_version": 3,
  "name": "TrackGPT",
  "version": "1.0",
  "description": "Counts ChatGPT messages and tracks water usage",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  
    "options_page": "options.html",
    
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "assets/fish.png",
      "assets/icon16.png",
      "assets/icon48.png",
      "assets/icon128.png",
      "assets/upscaled.png",
      "assets/usa.png"
    ],
    "matches": ["<all_urls>"]
  }]
}